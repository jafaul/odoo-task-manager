<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Email Template -->
    <record id="task_expiry_email_template" model="mail.template">
        <field name="name">Task Expiry Notification</field>
        <field name="model_id" ref="task_manager.model_task_manager"/>
        <field name="subject">Task Due Soon: {{ object.name }}</field>
        <field name="email_from">no-reply@tms.com</field>
        <field name="email_to">{{object.assigned_to.partner_id.email}}</field>
        <field name="body_html" type="html">
            <div>
                <p>
                    Hello <t t-out="object.assigned_to.name or ''"/>,
                </p>
                <p>
                    This is a reminder that the task <strong><t t-out="object.name"/></strong>
                    is due on <t t-out="object.due_date.strftime('%Y-%m-%d %H:%M') if object.due_date else ''"/>.
                </p>
                <p>
                    Best regards,<br/>
                    Task Manager System
                </p>
            </div>
        </field>

    </record>

    <!-- Cron Job -->
    <record id="ir_cron_task_due_reminder" model="ir.cron">
        <field name="name">Task Due Reminder</field>
        <field name="model_id" ref="task_manager.model_task_manager"/>
        <field name="state">code</field>
        <field name="code">model.send_due_soon_notifications()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="user_id" ref="base.user_root"/>
    </record>
</odoo>
